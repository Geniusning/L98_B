  .AI-wrapper {
    padding: 20rpx;
    padding-bottom: 88rpx;
    position: relative;
  }
  .stepOne-wrapper {
    background: #fff;
    padding: 10rpx;
    margin-bottom: 20rpx;
  }
  .select-box {
    margin-top: 20rpx;
    .radio-group {
      display: flex;
      flex-wrap: wrap;
    }
    .select-item {
      float: left;
      display: flex;
      margin-bottom: 8rpx;
    }
  }
  .allClient {
    margin: 20rpx 0;
    width: 150rpx;
    padding: 10rpx;
    border: 1px solid #ccc;
  }
  /* 第二步 */
  .stepTwo-wrapper {
    background: #fff;
    padding: 10rpx;
  }
  .scrollView {
    height: 500rpx;
    margin-top: 20rpx;
  }
  .label_tag {
    display: flex;
    margin-bottom: 20rpx;
    margin-right: 10rpx;
  }
  .step2Checkbox {
    padding-top: 50rpx;
  }
  .title {
    font-weight: 700;
    color: #333;
    font-size: 30rpx;
  }

  .btn-wrapper {
    margin-top: 20rpx;
    display: flex;
    justify-content: space-between;
  }
  .btn-wrapper button {
    width: 100%
  }
  /* 第三步第四部 */
  .stepThree-wrapper,
  .stepFour-wrapper {
    margin-top: 20rpx;
    background: #fff;
    padding: 10rpx;
  }
  .select-channel {
    margin-top: 20rpx;
  }
  .selectModel,
  .customTime-box {
    margin-top: 20rpx;
    .picker {
      background-color: #ccc;
      color: #fff;
      width: 300rpx;
    }
  }
</style>
